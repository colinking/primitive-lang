{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Primitive",
	"patterns": [
		{
			"comment": "Line comments",
			"begin": "//",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.comment.primitive"
				}
			},
			"end": "$",
			"name": "comment.line.double-slash.primitive"
		},
		{
			"comment": "Namespace declarations",
			"match": "(?<=namespace)\\s+([a-zA-Z_]\\w*)",
			"captures": {
				"1": {
					"name": "entity.name.namespace.primitive"
				}
			}
		},
		{
			"comment": "Object declarations",
			"match": "(?<=object)\\s+([a-zA-Z_]\\w*)",
			"captures": {
				"1": {
					"name": "entity.name.object.primitive"
				}
			}
		},
		{
			"comment": "Brackets",
			"patterns": [
				{
					"match": "\\{|\\}",
					"name": "punctuation.other.bracket.curly.primitive"
				},
				{
					"match": "\\(|\\)",
					"name": "punctuation.other.bracket.round.primitive"
				},
				{
					"match": "\\[|\\]",
					"name": "punctuation.other.bracket.square.primitive"
				}
			]
		},
		{
			"comment": "Delimiters",
			"patterns": [
				{
					"match": "\\.",
					"name": "punctuation.other.period.primitive"
				}
			]
		},
		{
			"comment": "Keywords",
			"patterns": [
				{
					"name": "keyword.namespace.primitive",
					"match": "\\b(namespace)\\b"
				},
				{
					"name": "keyword.object.primitive",
					"match": "\\b(object)\\b"
				}
			]
		}
	],
	"scopeName": "source.prim"
}
